{
  "name": "my-app",
  "productName": "Screen Recorder",
  "version": "1.0.0",
  "description": "A simple, fast & easy to use screen recorder",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
	"build-installer": "electron-builder"
  },
  "build":{
	"appId": "my-app",
	"win":{
		"target":["nsis"],
		"icon": "src/icon.png",
	}
	"nsis":{
		"installerIcon": "src/icon.png",
		"uninstallerIcon": "src/icon.png",
		"uninstallerDisplayName": "Screen Recorder",
		"license": "license.txt",
		"oneClick": false,
		"allowToChangeInstallationDirectory": true,
	}
  
  }
  "keywords": [],
  "author": {
    "name": "[Anom Chakravorty]",
    "email": "anomchakravorty3008@gmail.com",
	"github": "https://github.com/anomic30"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "my_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.7",
    "electron-builder": "^22.11.7",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "electron": "^13.1.2"
  }
}
